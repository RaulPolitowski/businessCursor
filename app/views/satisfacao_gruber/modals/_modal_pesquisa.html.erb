<div id="modal_pesquisa_gruber" class="modal inmodal" tabindex="-1" role="dialog" data-backdrop="static"  data-keyboard="false" aria-hidden="true" >
  <div class="modal-dialog modal-lg">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-th-list modal-icon"></i>
        <h4 class="modal-title">Pesquisa Gruber</h4>
      </div>
      <form class="form-horizontal" id="form_pesquisa_gruber">
        <div class="modal-body no-padding">
          <div class="tabs-container">
            <ul class="nav nav-tabs">
              <li class="active"><a data-toggle="tab" href="#tabPesquisa"> Informações</a></li>
            </ul>
            <div class="tab-content">
              <div id="tabPesquisa" class="tab-pane active">
                <div class="panel-body">
                  <div class="form-group">
                    <div class="field col-sm-4 padding" >
                      <%= label_tag 'Cliente', nil %>
                      <%= text_field_tag :pesquisa_cliente, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                      <%= hidden_field_tag 'pesquisa_cliente_id', nil, class: 'form-control input-sm' %>
                      <%= hidden_field_tag 'pesquisa_id', nil, class: 'form-control input-sm' %>
                    </div>
                    <div class="field col-sm-3 padding">
                      <%= label_tag 'CNPJ', nil %>
                      <%= text_field_tag :pesquisa_cliente_cnpj, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                    <div class="field col-sm-1 padding">
                      <%= label_tag 'Pend. Fin.', 'Pend. Fin.' %>
                      <%= text_field_tag :pesquisa_pendencia_financeira, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                    <div class="field col-sm-4 padding">
                      <%= label_tag 'Cidade-UF', "Cidade-UF" %>
                      <%= text_field_tag :pesquisa_cliente_cidade, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field col-sm-3 padding">
                      <%= label_tag 'Nome', nil %>
                      <%= text_field_tag :pesquisa_nome, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                    <div class="field col-sm-3 padding">
                      <%= label_tag 'Email', nil %>
                      <%= text_field_tag :pesquisa_email, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                    <div class="field col-sm-3 padding">
                      <%= label_tag 'Telefone', nil %>
                      <%= text_field_tag :pesquisa_telefone, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                    <div class="field col-sm-3 padding">
                      <%= label_tag 'Data pesquisa', nil %>
                      <%= text_field_tag :pesquisa_data, nil, class: 'form-control input-sm', autocomplete: "off", readOnly: 'true' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field col-sm-12">
                      <hr class="no-padding">
                    </div>
                    <div class="ibox-content tbody-pesquisa-respostas">
                      <table id="table-pesquisa-resposta-modal" class="table table-hover">
                        <thead>
                        <tr>
                          <th style="width: 15%">Setor</th>
                          <th style="width: 15%">Equipe</th>
                          <th style="width: 5%">Nota</th>
                          <th>Motivo</th>
                        </tr>
                        </thead>
                        <tbody id="body_pesquisa_respostas_modal">

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
        </div>
      </form>
    </div>
  </div>
</div>
