<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>CIDADES</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Cadastros</h5>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover table-cidades">
            <thead>
            <tr>
              <th>CÃ³digo</th>
              <th>Nome</th>
              <th>Preferencial</th>
              <th>Blacklist</th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @cidades.each do |cidade| %>
                <tr>
                  <td><%= cidade.id %></td>
                  <td><%= cidade.nome %></td>
                  <td><%= human_boolean cidade.preferencial %></td>
                  <td><%= human_boolean cidade.blacklist %></td>
                  <td><%= link_to preferencial_cidade_path(cidade), { class: 'btn btn-sm btn-success', title: 'Definir CNAE preferencial', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                        <i class="fa fa-star" aria-hidden="true"></i>
                    <% end %></td>
                  <td><%= link_to blacklist_cidade_path(cidade), { class: 'btn btn-sm btn-danger', title: 'Incluir CNAE na blacklist', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                        <i class="fa fa-ban" aria-hidden="true"></i>
                    <% end %></td>
                </tr>
            <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>

    <script type="text/javascript">
        $(function() {
            $('.table-cidades').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                
                buttons: [
                    {extend: 'excel', title: 'Cidades'},
                    {extend: 'pdf', title: 'Cidades'}
                ],
                "ordering": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
                }
            });
        });
    </script>
<% end %>
