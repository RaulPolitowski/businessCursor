<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <img alt="image" style="width: 300px; padding-bottom: 20px; padding-top: 30px" src="<%= image_url 'html_logo.png' %>"/>
    </div>
    <br>
    <h3>Bem vindo ao Business Manager</h3>
    <p>

    </p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  :html => {class: 'm-t'}) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Username' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:'Password' %>
        </div>

      <div class="form-group">
        <%= f.collection_select :empresa_ids, Empresa.ativas.order(:id), :id, :razao_social, {},
                                {class: 'form-control input-sm chosen-select'} %>
      </div>

        <% if devise_mapping.rememberable? -%>
            <small><div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'Lembrar-me' %>
            </div></small>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-primary block full-width m-b' %>
        </div>

        <%= render "devise/shared/links" %>
    <% end %>
    <p class="m-t"> <small>German Tech Sistemas &copy; 2018</small> </p>
  </div>
</div>



