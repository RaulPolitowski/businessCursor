<div class="row">
  <div class="col-lg-12 padding">
    <div class="ibox-content">
      <table class="table table-striped table-bordered table-hover table-campanha-numeros-desconectados" style="font-size: 12px;">
        <thead>
          <tr>
            <th class="tableHeadCampanha" style="width: 10%">Número</th>
            <th>Usuário</th>
            <th class="tableHeadCampanha">Status/Maturado</th>
          </tr>
        </thead>
        <tbody>
          <% @numeros_desconectados.each do |num| %>
            <tr>
              <td class="tableHeadCampanha"><%= num.numero %></td>
              <td><%= num.nome %></td>
              <td class="tableHeadCampanha">
                <%= label_tag num.status, nil, class: "disconnected_number text-uppercase" %>
                <%= " á #{(Time.zone.now.to_date - num.created_at.to_date).to_i} dias"%>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>
  </div>
</div>