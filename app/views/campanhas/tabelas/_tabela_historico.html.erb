<div class="form-group">
  <div style="margin-bottom: 2%; display: flex; justify-content: space-evenly; align-items: flex-end">
    <div class="col-sm-3 padding" >
      <%= label_tag 'Data Início', nil      %>
      <%= text_field_tag :data_inicio_modal, nil, class: 'form-control input-sm', autocomplete: 'off', placeholder: 'Data Inicio'%>
    </div>

    <div class="col-sm-3 padding" >
      <%= label_tag 'Data Fim', nil      %>
      <%= text_field_tag :data_fim_modal, nil, class: 'form-control input-sm', autocomplete: 'off', placeholder: 'Data Fim'%>
    </div>
    <div class="col-sm-3 padding" >
      <button type='button' class='btn btn-primary' id='pesquisar_historico'>Pesquisar</button>
    </div>
  </div>
  <div class="col-lg-12 padding">
    <div class="ibox-content padding"> 
      <table class="table table-striped table-bordered table-hover table-campanha-modal-finalizadas" style="font-size: 12px;">
        <thead>
        <tr>
          <th style="width: 5%">Job</th>
          <th style="width: 6%">Estado</th>
          <th style="width: 8%">Tempo Espera</th>
          <th style="width: 8%">Enviado</th>
          <th style="width: 5%">Erro</th>
          <th style="width: 5%">Total</th>
          <th style="width: 20%">Data/hora término</th>
        </tr>
        </thead>
        <tbody id='body_table_campanha_primeira_campanha'>
        </tbody>
      </table>
    </div>
    <div style="display: flex;">
      <div style="display: flex; flex-direction: column; width: 25%; margin-left: 3%">
        <%= label_tag 'Env. com Sucesso', nil, style: "width: 100%;" %>
        <%= text_field_tag :qtd_disparo_enviado, nil, class: 'input-sm', autocomplete: 'off', disabled: true, style: "width: 80%" %>
      </div>
      <div style="display: flex; flex-direction: column; width: 20%;">
        <%= label_tag 'Env. com Erro', nil, style: "width: 100%" %>
        <%= text_field_tag :qtd_disparo_erro, nil, class: 'input-sm', autocomplete: 'off', disabled: true, style: "width: 80%" %>
      </div>
      <div style="display: flex; flex-direction: column; width: 20%;">
        <%= label_tag "Enviados Total", nil ,style: "width: 100%"%>
        <%= text_field_tag :qtd_disparo_total, nil, class: 'input-sm', autocomplete: 'off', disabled: true, style: "width: 80%" %>
      </div>
    </div>
  </div>
</div>