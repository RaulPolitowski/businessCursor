<div id="modal_transferir_negociacao" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Transferir negociação</h4>
      </div>
      <form class="form-horizontal" id="form_transferir">
        <input type="hidden" id="filtro" value="">
        <input type="hidden" id="tipo" value="">
        <div class="modal-body">
          <div class="form-group" id="formCliente">
            <div class="field">
              <div class="col-sm-12">
                <label for="cliente">Cliente</label>
                <%= text_field_tag "transferir_cliente", nil,{label: false, disabled: 'true', class: "form-control input-sm"} %>
                <input type="hidden" id="transferir_negociacao_id" value="">
              </div>
            </div>
          </div>
          <div class="form-group" id="formOperador">
            <div class="field">
              <div class="col-sm-12">
                <label for="responsavel_atual">Responsável atual</label>
                <%= text_field_tag "transferir_responsavel", nil,{label: false, disabled: 'true', class: "form-control input-sm"} %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <div class="col-sm-12">
                <label for="responsavel_novo">Novo responsável</label>
                <%= select_tag 'transferir_novo_responsavel', options_for_select(User.empresas_acesso(current_empresa.id).collect {|p| [ p.name, p.id ] }), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione um implantador'}, :include_blank => true} %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
          <%= submit_tag 'Transferir', :id => 'btnTransferirNegociacao', :class => 'btn btn-info'%>
          <%= submit_tag 'Transferir', :id => 'btnTransferirNegociacoes', :class => 'btn btn-info'%>
        </div>
      </form>
    </div>
  </div>
</div>


