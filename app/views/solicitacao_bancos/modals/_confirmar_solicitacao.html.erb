<div id="modalConfimarSolicitacaoBanco" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content  animated fadeIn">
      <div class="modal-header">
        <h2 class="modal-title">Solicitação de Banco de Dados</h2>
      </div>
      <div class="modal-body scroll">
        <h3>Deseja solicitar <strong>Banco de Dados </strong> para esse fechamento?</h3>
        <br><br>
        <div class="col-sm-3"> </div>
        <div class="col-sm-6" style="font-size: 20px;">
          <%= radio_button_tag 'solicitou_banco', 'true', true %> SIM
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= radio_button_tag 'solicitou_banco', 'false' %> NÃO
        </div>
        <div class="col-sm-3"> </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Voltar</button>
        <button type="button" class="btn btn-primary" id="btnSolicitarBanco">Próximo</button>;
      </div>
    </div>
  </div>
</div>