<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">

              <fieldset class="form-horizontal">

                <%= form_for(@cnae) do |f| %>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :codigo, 'Código', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                          <%= f.text_field :codigo, class: 'form-control input-sm', maxlength: '8', onkeypress: 'return SomenteNumero(event)' %>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :descricao, 'Descrição', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                          <%= f.text_field :descricao, class: 'form-control input-sm' %>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :preferencial, 'Preferencial', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                          <%= f.select :preferencial, options_for_select([
                                                                                 ["Sim", true],
                                                                                 ["Não", false]
                                                                         ], f.object.preferencial), {}, {class: 'form-control input-sm'} %>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :blacklist, 'Blacklist', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                          <%= f.select :blacklist, options_for_select([
                                                                              ["Sim", true],
                                                                              ["Não", false]
                                                                      ], f.object.blacklist), {}, {class: 'form-control input-sm'} %>
                        </div>
                      </div>
                    </div>
                    <br>
                    <br>
                    <div class="actions aligncenter">
                      <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                    </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
    <script type="text/javascript">
        $(function() {
            $("#new_cnae").validate({
                rules: {
                    'cnae[codigo]': {
                        required: true,
                        number: true,
                        minlength: 2
                    },
                    'cnae[descricao]': {
                        required: true,
                        minlength: 5
                    }
                }
            });
        });
    </script>
<% end %>

