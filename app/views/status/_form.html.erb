<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@status, html: { autocomplete: "off" }) do |f| %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :descricao, 'Descrição', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                        <%= f.text_field :descricao, class: 'form-control input-sm'%>
                      </div>
                    </div>
                  </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :tipo_status, 'Tipo', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                          <%= f.select :tipo_status, options_for_select([
                                                                               ['LIGAÇÃO', 1],
                                                                               ['IMPLANTAÇÃO', 2]
                                                                           ], f.object.tipo_status), {:include_blank => true}, {class: 'form-control input-sm'} %>
                        </div>
                      </div>
                    </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :status_empresa, 'Funil de Vendas', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                        <%= f.select :status_empresa, options_for_select([
                                                                             ['EM NEGOCIAÇÃO', 2],
                                                                             ['DESCARTADAS', 3],
                                                                             ['SEM CONATO INICIAL', 4],
                                                                             ['AGUARDADO IMPLANTAÇÃO', 5],
                                                                             ['IMPLANTAÇÃO EM ANDAMENTO', 6],
                                                                             ['DESISTENTE', 7],
                                                                             ['IMPLANTAÇÃO CONCLUÍDA', 8]
                                                                         ], f.object.status_empresa), {:include_blank => true}, {class: 'form-control input-sm'} %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :fechamento, 'Fechamento?', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                        <div class="i-checks">
                          <%= f.check_box :fechamento %>
                        </div>
                      </div>
                    </div>
                  </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :descartada, 'Descartada?', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                          <div class="i-checks">
                            <%= f.check_box :descartada %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <br>
                  <br>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>