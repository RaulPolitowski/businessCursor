<div class="text-center  animated fadeInDown">
  <div>
    <div>
      <img alt="image" style="width: 300px; padding-bottom: 20px; padding-top: 30px" src="<%= image_url 'html_logo.png' %>"/>
    </div>
    <br>
    <h2>Solicitação de desistência</h2>
    <div class="ibox-content">
    <div class="tabs-container">
      <form role="form" id="formCliente">
        <div class="form-group margin-bottom-5">
          <div class="row">
            <h3 class="pull-left">Seus dados</h3>
          </div><br>
          <div class="row">
            <div class="field col-sm-2">
              <label for="data_solicitacao">Data/hora solicitação</label>
              <input class="form-control input-sm" type="text" name="data_solicitacao" id="data_solicitacao" readOnly="off" value="<%= Time.now.strftime("%d/%m/%y %H:%M") %>">
            </div>
            <div class="field col-sm-4">
              <label for="nome_solicitante">Digite seu nome</label>
              <input class="form-control input-sm" type="text" name="nome_solicitante" id="nome_solicitante">
            </div>
            <div class="field col-sm-6">
              <label for="email_solicitante">Digite seu email</label>
              <input class="form-control input-sm" type="text" name="email_solicitante" id="email_solicitante">
            </div>
          </div>
          <hr class="no-padding">
          <div class="row">
            <h3 class="pull-left">Dados do cliente</h3>
          </div>
          <div class="row" style="margin-top: 15px">            
            <div class="field col-sm-2">
              <label for="cliente_cnpj">Digite o CNPJ da empresa</label>
              <label id="error_cnpj" style="color: red; display: none;">Campo obrigatório!</label>
              <div class="input-group m-b" style="margin-bottom: 0px;">
                <input class="form-control input-sm" type="text" name="cliente[cnpj]" id="cliente_cnpj"  autocomplete="off"  maxlength="14" onkeypress="return SomenteNumero(event)" size="14"  >
                <span class="input-group-addon padding-0">
                  <button type="button" class="btn btn-sm btn-info btn-table" onclick="buscarCliente()" title="Buscar" data-toggle="tooltip" data-placement="right">
                      <i class="fa fa-search" aria-hidden="true"></i>
                  </button>
                </span>
              </div>              
            </div>
            <div class="field col-sm-4">
              <label for="cliente_razao_social">Razão social</label>
              <input type="hidden" name="cliente_id" id="cliente_id">
              <input class="form-control input-sm" type="text" name="cliente[razao_social]" id="cliente_razao_social" readOnly="off">
            </div>
            <div class="field col-sm-3">
              <label for="cliente_cidade">Cidade/UF</label>
              <input class="form-control input-sm" type="text" name="cliente[cidade]" id="cliente_cidade" readOnly="off">
            </div>
            <div class="field col-sm-3">
              <label for="tecnico">Responsável técnico</label>
              <input class="form-control input-sm" type="text" name="tecnico" id="tecnico" readOnly="off">
            </div>
          </div>
        </div>
        <div class="form-group margin-bottom-5">
          <div class="row" style="margin-top: 15px">
            <div class="field col-sm-4">
              <label for="solicitante">Solicitante do cancelamento</label>
              <label id="error_solicitante" style="color: red; display: none;">Campo obrigatório!</label>
              <input class="form-control input-sm" type="text" name="solicitante" id="solicitante" >
            </div>
            <div class="field col-sm-2">
              <label for="telefone">Telefone/Celular</label><br>
              <label id="error_telefone" style="color: red; display: none;">Campo obrigatório!</label>
              <div class="input-group m-b" style="margin-bottom: 0px;">
                <input class="form-control input-sm" type="text" name="telefone" id="telefone" autocomplete="off">
                <span class="input-group-addon padding-0">
                  <button type="button" class="btn btn-sm btn-info btn-table" onclick="openWhats()" title="Whatsapp" data-toggle="tooltip" data-placement="right">
                      <i class="fa fa-whatsapp" aria-hidden="true"></i>
                  </button>
                </span>
              </div>
            </div>            
          </div>
        </div>
        <div class="form-group margin-bottom-5">
          <div class="row"  style="margin-top: 15px">
            <div class="field col-sm-12">
              <label for="motivo">Motivo da desistência</label>
              <label id="error_motivo" style="color: red; display: none;">Informe o motivo!</label>
              <textarea class="form-control input-sm" rows="5" name="motivo" id="motivo"></textarea>
            </div>         
          </div>
        </div>
        <div class=row>
          <div class="field col-sm-12" style="margin-top: 10px">
            <button name="button" class="ladda-button btn btn-success btn-rounded" id="btnLancarDesistencia">
              <i class="fa fa-save"></i> Salvar
            </button>
          </div> 
        </div>
      </form>
    </div>
  </div>
  </div>
<%= render 'solicitacao_desistencia_externo/modal_erro_buscar_empresa' %>
</div>

<script>
  function openWhats() {
    var telefone = $('#telefone').val();
    if(telefone == '' || telefone == null)
        return false;
      if(telefone.length > 11 && telefone.startsWith('55')){
          window.open('https://api.whatsapp.com/send?phone=' + telefone, '_blank');
      }else{
          window.open('https://api.whatsapp.com/send?phone=55' + telefone, '_blank');
      }
  }
</script>



