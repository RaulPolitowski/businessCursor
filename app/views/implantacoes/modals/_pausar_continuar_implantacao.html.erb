<div id="modal_pausar_continuar_implantacao" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <%= form_for @implantacao, :url => pausar_continuar_implantacao_path do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Implantador</h4>
      </div>
          <div class="modal-body" style="height: 200px;">
            <% if !@implantacao.pausada? %>
            <div class="form-group">
              <div class="field">
                <div class="col-sm-12">
                  <label id="error_motivo" style="color: red; display: none;">Informe o motivo!</label>
                  <%= text_area(:implantacao, :motivo, cols: 40, rows: 5, class: 'form-control input-sm', required: true)%>
                </div>
              </div>
            </div>
            <% end %>
          <% if current_user.admin? %>
              <div class="form-group">
                <div class="field">
                  <div class="col-sm-12">
                    <label for="responsavel_novo">Implantador</label>
                    <%= f.select :user_id, options_for_select(User.empresas_acesso(current_empresa.id).collect {|p| [ p.name, p.id ] }, current_user.id ), {}, {:class => "form-control input-sm chosen-select"} %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal" id="btnFechar">Fechar</button>
          <%= f.submit 'Salvar', :class => 'btn btn-info'%>
        </div>
      <% end %>
    </div>
  </div>
</div>


