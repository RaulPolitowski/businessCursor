<div id="modal_motivo" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Motivo</h4>
      </div>
      <form class="form-horizontal" id="form_motivo">
        <div class="modal-body">
          <div class="form-group">
            <div class="field">
              <div class="col-sm-12">
                <label id="error_motivo" style="color: red; display: none;">Informe o motivo!</label>
                <textarea autocomplete="off" class="form-control" name="motivo" id="text_motivo"></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal" id="btnFechar">Fechar</button>
          <%= submit_tag 'Aguardar', :id => 'btnAguardarTerceiros', :class => 'btn btn-warning ladda-button', :style => 'display: none;' %>
          <%= submit_tag 'Agendar', :id => 'btnChamarAgenda', :class => 'btn btn-info ladda-button', :style => 'display: none;' %>
          <%= submit_tag 'Salvar', :id => 'btnSalvarDesistenteDurante', :class => 'btn btn-info ladda-button', :style => 'display: none;' %>
          <%= submit_tag 'Salvar', :id => 'btnSalvarDesistente',  :class => 'btn btn-info ladda-button', :style => 'display: none;' %>
          <%= submit_tag 'Salvar', :id => 'btnCancelarAgenda',  :class => 'btn btn-info ladda-button', :style => 'display: none;' %>
        </div>
      </form>
    </div>
  </div>
</div>


