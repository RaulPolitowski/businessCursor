<div id="modal_cobrancas" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true" style="z-index: 9999 !important">
  <div class="modal-dialog modal-lg" style="width: 80%">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Histórico</h4>
      </div>
      <div class="modal-body" id="body-no-padding">
        <div class="ibox-content">
          <div class="row">
            <div class="col-lg-12">
              <div class="field">
                <div class="col-sm-12 padding ">
                  <%= text_field_tag :empresa, nil, class: 'form-control input-sm text-center', autocomplete: "off", readOnly: "true",  style: "font-weight: bold" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="ibox-content scroll">
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped table-bordered table-hover" id="table-cobrancas">
                <thead>
                <tr>
                  <td>Data</td>
                  <td>Houve contato?</td>
                  <td>Usuário</td>
                  <td>Contato</td>
                  <td>Observações</td>
                  <td>Prox. retorno</td>
                </tr>
                </thead>
                <tbody style="width:100%" id="tbody_cobranca">

                </tbody>
                <tfoot>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>

<style>
  .scroll{
    overflow-y: auto;
    -ms-overflow-style: -ms-autohiding-scrollbar;
    min-height: 200px;
    max-height: 500px;
  }
  #body-no-padding{
    padding: 0px 0px 0px 0px;
  }
</style>