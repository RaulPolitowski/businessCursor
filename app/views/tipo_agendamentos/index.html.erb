<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>TIPOS DE AGENDAMENTO</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Cadastros</h5>
          <div class="ibox-tools">
            <%= button_to new_tipo_agendamento_path, { method: 'get', class: 'btn btn-sm btn-primary' } do %>
              <i class="fa fa-file" aria-hidden="true"> Novo Tipo</i>
            <% end %>
          </div>
        </div>
        <div class="ibox-content">
          <div class="tabs-container" id="tabsTipoAg" >
            <ul class="nav nav-tabs">
              <li class="active"><a data-toggle="tab" id="tabAtivo" href="#tabsTipoAg-1"> Ativos</a></li>
              <li class=""><a data-toggle="tab" id="tabInativo" href="#tabsTipoAg-2"> Inativos</a></li>
            </ul>
            <div class="tab-content">
              <div id="tabsTipoAg-1" class="tab-pane active">
                <div class="panel-body">
                  <table class="table table-striped table-bordered table-hover table-tipo-agendamento-ativos">
                    <thead>
                    <tr>
                      <th>Código</th>
                      <th>Descrição</th>
                      <th>Cor</th>
                      <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @tipo_agendamentos.each do |tipo_agendamento| %>
                      <tr>
                        <td><%= tipo_agendamento.id.to_s %></td>
                        <td><%= tipo_agendamento.descricao %></td>
                        <td><div style="background-color: <%= tipo_agendamento.cor %>; color: white"><%= tipo_agendamento.cor %></div></td>
                        <td><%= link_to edit_tipo_agendamento_path(tipo_agendamento), { class: 'btn btn-sm btn-success', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                              <i class="fa fa-pencil" aria-hidden="true"></i>
                            <% end %>
                            <%= link_to desativar_tipo_agendamento_path(tipo_agendamento), { class: 'btn btn-sm btn-danger', title: 'Desativar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                              <i class="fa fa-remove" aria-hidden="true"></i>
                            <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                    <tfoot>
                    </tfoot>
                  </table>
                </div>
              </div>
              <div id="tabsTipoAg-2" class="tab-pane">
                <div class="panel-body">
                  <table class="table table-striped table-bordered table-hover table-tipo-agendamento-inativos">
                    <thead>
                    <tr>
                      <th>Código</th>
                      <th>Descrição</th>
                      <th>Cor</th>
                      <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @tipo_agendamentos_inativos.each do |tipo_agendamento| %>
                      <tr>
                        <td><%= tipo_agendamento.id.to_s %></td>
                        <td><%= tipo_agendamento.descricao %></td>
                        <td><div style="background-color: <%= tipo_agendamento.cor %>; color: white"><%= tipo_agendamento.cor %></div></td>
                        <td><%= link_to edit_tipo_agendamento_path(tipo_agendamento), { class: 'btn btn-sm btn-success', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                              <i class="fa fa-pencil" aria-hidden="true"></i>
                            <% end %>
                            <%= link_to desativar_tipo_agendamento_path(tipo_agendamento), { class: 'btn btn-sm btn-primary', title: 'Ativar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                              <i class="fa fa-check" aria-hidden="true"></i>
                            <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                    <tfoot>
                    </tfoot>
                  </table>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
      $(function() {
          $('.table-tipo-agendamento-ativos').DataTable({
              pageLength: 10,
              rowReorder: {
                  selector: 'td:nth-child(2)'
              },
              responsive: true,
              dom: '<"html5buttons"B>lTfgitp',
              "ordering": true,
              buttons: [
                  {extend: 'excel', title: 'Tipos de Agendamento'},
                  {extend: 'pdf', title: 'Tipos de Agendamento'}
              ],
              "language": {
                  "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
              },
              "columnDefs": [
                  { "width": "10%", "targets": 0 },
                  { "width": "70%", "targets": 1 },
                  { "width": "10%", "targets": 2 },
                  { "width": "10%", "targets": 3 }
              ],

          });

          $('.table-tipo-agendamento-inativos').DataTable({
              pageLength: 10,
              rowReorder: {
                  selector: 'td:nth-child(2)'
              },
              responsive: true,
              dom: '<"html5buttons"B>lTfgitp',
              "ordering": true,
              buttons: [
                  {extend: 'excel', title: 'Tipos de Agendamento'},
                  {extend: 'pdf', title: 'Tipos de Agendamento'}
              ],
              "language": {
                  "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
              },
              "columnDefs": [
                  { "width": "10%", "targets": 0 },
                  { "width": "70%", "targets": 1 },
                  { "width": "10%", "targets": 2 },
                  { "width": "10%", "targets": 3 }
              ],

          });
      });
  </script>
<% end %>