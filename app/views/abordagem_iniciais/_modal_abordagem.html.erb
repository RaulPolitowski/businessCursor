<% if ['render_form', 'show', 'new'].include? action_name %>
  <div id="modal_abordagem" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content animated fadeIn">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">Abordagem Inicial </h4>
        </div>
        <div id='form_abordagem_modal'>
          <%= render partial: 'abordagem_iniciais/form', locals: {
            abordagem: @abordagem_inicial,
            total_abordagem_tipo: @total_abordagem_tipo
          } %>
        </div>
      </div>
    </div>
  </div>
<% end %>