<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>ABORDAGENS INICIAIS</h2>
  </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row panel-body">
    <button class="btn btn-primary btn-xs pull-rigth " type="button" id="btnNovaAbordagem" onclick="createAbordagem()">Nova abordagem</button>
  </div>
  <div class="panel-body padding">
    <div class="row">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" id="tab1" href="#tab-1"> Ativas</a></li>
          <li class=""><a data-toggle="tab" id="tab2" href="#tab-2">Desativados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <%= render 'abordagem_iniciais/tabelas/tabela_ativados' %>
            </div>
          </div>
          <div id="tab-2" class="tab-pane">
            <div class="panel-body">
              <%= render 'abordagem_iniciais/tabelas/tabela_desativados' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="panel-modal-abordagem">
    <%= render partial: 'abordagem_iniciais/modal_abordagem' %>
  </div>
</div>


