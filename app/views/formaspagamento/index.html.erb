<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>FORMAS DE PAGAMENTO</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Cadastros</h5>
          <div class="ibox-tools">
            <%= button_to new_formaspagamento_path, { method: 'get', class: 'btn btn-sm btn-primary' } do %>
              <i class="fa fa-file" aria-hidden="true"> Nova Forma de Pagamento</i>
            <% end %>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover table-formas">
            <thead>
            <tr>
              <th>Descricao</th>
              <th>Parcelado</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @formapagamentos.each do |formapagamento| %>
              <tr>
                <td><%= formapagamento.descricao %></td>
                <td><%= human_boolean formapagamento.parcelado %></td>
                <td><%= link_to edit_formaspagamento_path(formapagamento), { class: 'btn btn-sm btn-default btn-table', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  <% end %></td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
      $(function() {
          $('.table-formas').DataTable({
              pageLength: 10,
              responsive: true,
              dom: '<"html5buttons"B>lTfgitp',
              "ordering": true,
              buttons: [
                  {extend: 'excel', title: 'Formas de Pagamento'},
                  {extend: 'pdf', title: 'Formas de Pagamento'}
              ],
              "language": {
                  "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
              },
              "columnDefs": [
                  { "width": "10%", "targets": 0 },
                  { "width": "85%", "targets": 1 },
                  { "width": "5%", "targets": 2 }
              ],

          });
      });
  </script>
<% end %>