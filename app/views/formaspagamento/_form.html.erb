<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@formapagamento, url: @formapagamento.id.present? ? formaspagamento_path : formaspagamento_index_path, html: { method: (@formapagamento.id.present? ? 'PUT' : 'post'), autocomplete: "off" })  do |f| %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :descricao, 'Descrição', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                        <%= f.text_field :descricao, class: 'form-control input-sm'%>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :parcelado, 'Parcelado' , class: 'col-sm-2 control-label'%>
                      <div class="col-sm-10">
                        <div class="i-checks">
                          <%= f.check_box :parcelado %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <br>
                  <br>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

