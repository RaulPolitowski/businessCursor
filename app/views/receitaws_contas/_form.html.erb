<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@receitaws_conta, html: { autocomplete: "off" }) do |f| %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :nome, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :nome, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :chave, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :chave, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :qtd_disponivel, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-2 padding">
                        <%= f.text_field :qtd_disponivel, class: 'form-control input-sm', onkeypress: 'return SomenteNumero(event)' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :dia_renovacao, 'Renovação', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-2">
                        <%= f.text_field :dia_renovacao, class: 'form-control input-sm', :value => @receitaws_conta.dia_renovacao.present? ?  human_date(@receitaws_conta.dia_renovacao) : '' %>
                      </div>
                    </div>
                  </div>

                  <br>
                  <br>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>