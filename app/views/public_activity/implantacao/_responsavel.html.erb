
<br>
<div class="row">
  <div class="col-lg-12 end">
    <div class="col-sm-1 col-lg-1">
      <%= image_tag(avatar_user_users_path(id: activity.owner.id), :alt => "Avatar", :class => "img-circle") %>
    </div>
    <div class="col-sm-8 col-lg-8">
      <% if activity.parameters[:responsavel].eql? activity.owner.id %>
          <b><%= activity.owner.name %></b> assumiu a responsabilidade da implantação.
      <% else %>
          <b><%= activity.owner.name %></b> alterou a responsabilidade da implantação para <i><%= (User.find activity.parameters[:responsavel]).name %></i>
      <% end %>
    </div>
      <div class="col-sm-3 col-lg-3">
    <div class="pull-right"><%= time_ago_in_words activity.created_at %> atrás</div>
    </div>

  </div>
</div>
