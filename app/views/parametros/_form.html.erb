<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@parametro, html: { autocomplete: "off" }) do |f| %>

                  <div class="form-group">
                    <div class="field">
                      <%= f.label :senha_master, 'Senha', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                          <%= f.password_field :senha_master, autocomplete: "off", class: 'form-control', placeholder:'Password' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :msg_whats, 'Msg. Whatsapp.', class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                          <%= f.text_area :msg_whats, class: 'form-control' %>
                      </div>
                    </div>
                  </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label 'Dias inertes', class: 'col-sm-2 control-label' %>
                        <div class="col-sm-2">
                          <%= f.text_field :tempo_inerte, class: 'form-control', autocomplete: "off", :onkeypress => 'return SomenteNumero(event)' %>
                        </div>
                      </div>
                    </div>

                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
