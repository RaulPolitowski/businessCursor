<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@servico, html: { autocomplete: "off" }) do |f| %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :nome_servico, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :nome_servico, class: 'form-control input-sm', :value => !@servico.nome_servico.nil? ? @servico.nome_servico : '' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :ordem, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :ordem, class: 'form-control input-sm', maxlength: '10', onkeypress: 'return SomenteNumero(event)' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :tipocobranca_id, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :tipocobranca_id, class: 'form-control input-sm', maxlength: '10', onkeypress: 'return SomenteNumero(event)' %>
                      </div>
                    </div>
                  </div>
                  <br>
                  <br>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

