<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@numero_notificacao) do |f| %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :numero, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :numero, disabled: @numero_notificacao.numero.present?, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :status, class: 'col-sm-2 control-label padding'  %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :status, disabled: true, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :nome, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :nome, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <% if @numero_notificacao.id.present? %>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :banido, class: 'col-sm-2 control-label padding' %>
                        <div class="col-sm-10 padding">
                          <div class="i-checks">
                            <%= f.check_box :banido, class: 'icheckbox_square-green' %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

