<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@setor, html: { autocomplete: "off" }) do |f| %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :nome_setor, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :nome_setor, class: 'form-control input-sm', :value => !@setor.nome_setor.nil? ? @setor.nome_setor : '' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :ordem, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :ordem, class: 'form-control input-sm', maxlength: '10', onkeypress: 'return SomenteNumero(event)' %>
                      </div>
                    </div>
                  </div>
<!--                  <div class="form-group">-->
<!--                    <div class="field">-->
                      <%#= f.label :setor_financeiro_id, class: 'col-sm-2 control-label padding' %>
<!--                      <div class="col-sm-10 padding">-->
                        <%#= f.text_field :setor_financeiro_id, class: 'form-control input-sm', maxlength: '10', onkeypress: 'return SomenteNumero(event)' %>
<!--                      </div>-->
<!--                    </div>-->
<!--                  </div>-->
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :tipo_setor, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.select(:tipo_setor, options_for_select([['CONTÃBIL', 'CONTABIL'], ['RH', 'RH'], ['ATEND. EXTERNO', 'EXTERNO'], ['FINANCEIRO', 'FINANCEIRO'], ['ATENDIMENTO', 'ATENDIMENTO']], f.object.tipo_setor), { :include_blank => false }, {class: 'form-control input-sm' }) %>
                      </div>
                    </div>
                  </div>
                  <br>
                  <br>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

