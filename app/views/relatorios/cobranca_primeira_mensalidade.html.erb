<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>RELATÓRIO COBRANÇA DE PRIMEIRA MENSALIDADE - ATRASADOS</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <h5>Filtros</h5>
          <%= form_tag('/relatorios/cobranca_primeira_mensalidade_print', method: :post) do %>
            <div class="row">
              <div class="col-sm-6">
                <%= label_tag 'Empresa', nil, class: 'col-sm-2 control-label padding' %>
                <%= select_tag  'empresa_id', options_for_select([
                                                                     ['GERMAN TECH (MATRIZ)', 17],
                                                                     ['GERMAN TECH (FILIAL)', 3253],
                                                                     ['GERMAN SERVIÇOS', 3422],
                                                                 ], ([17,3253, 3422])), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione uma empresa'}, :include_blank => true, :multiple => true} %>
              </div>
              <div class="field col-sm-3">
                <%= label_tag 'Vendedor', nil, class: 'col-sm-12 control-label padding' %>
                <%= select_tag 'vendedor', options_for_select(User.empresas_acesso(current_empresa.id).collect {|p| [ p.name, p.id ] }), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione um vendedor'}, :include_blank => true} %>
              </div>
              <div class="col-lg-2">
                <br>
                <%= submit_tag 'Gerar', :id => 'btnGerarRelatorio', :class => 'btn btn-primary', :formtarget => "_blank" %>
              </div>
            </div>
            <div class="row">
              <div class="field col-sm-3">
                <br>
                <label >
                  <%=  check_box_tag 'ignorar_parceiro', 'true', true, class: 'form-control input-sm icheckbox_square-green i-checks' %>
                  Ignorar parceiro
                </label>                
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag("relatorios_analise_desistencia") %>