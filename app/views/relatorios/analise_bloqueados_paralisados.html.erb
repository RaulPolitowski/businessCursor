<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>RELATÓRIO CONSULTA DE BLOQUEIO E PARALISAÇÃO</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <h5>Filtros</h5>
          <%= form_tag('/relatorios/analise_bloqueados_paralisados_print', method: :post) do %>
            <div class="row">
              <div class="field col-sm-2">
                <%= label_tag 'Modelo', nil, class: 'col-sm-2 control-label padding' %>
                <%= select_tag  'detalhado', options_for_select([
                                                                    ['Resumido', false],
                                                                    ['Detalhado', true]
                                                                ], true), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione um tipo'}} %>
              </div>
              <div class="field col-sm-2">
                <%= label_tag 'Tipo', nil, class: 'col-sm-2 control-label padding' %>
                <%= select_tag  'tipo', options_for_select([
                                                                       ['Todos', '0'],
                                                                       ['Bloqueadas', '1'],
                                                                       ['Paralisadas', '2']
                                                               ], '0'), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione um tipo'}} %>
              </div>
              <div class="field col-sm-2">
                <%= label_tag 'Dias cliente', nil, class: 'col-sm-12 control-label padding' %>
                <%= text_field_tag :dias_cliente, nil, class: 'form-control input-sm', autocomplete: "off", onkeypress: 'return SomenteNumero(event)' , value: 90  %>
              </div>
              <div class="field col-sm-2">
                <%= label_tag 'Dias bloqueio', nil, class: 'col-sm-12 control-label padding' %>
                <%= text_field_tag :dias_bloqueado, nil, class: 'form-control input-sm', autocomplete: "off", onkeypress: 'return SomenteNumero(event)' , value: 7  %>
              </div>
              <div class="field col-sm-2">
                <%= label_tag 'Dias paralisação', nil, class: 'col-sm-12 control-label padding' %>
                <%= text_field_tag :dias_paralizado, nil, class: 'form-control input-sm', autocomplete: "off", onkeypress: 'return SomenteNumero(event)' , value: 10  %>
              </div>
              <div class="field col-sm-2">
                <%= label_tag 'Ordenar', nil, class: 'col-sm-2 control-label padding' %>
                <%= select_tag  'ordenar', options_for_select([
                                                               ['Dias bloqueado/paralisado', '0'],
                                                               ['Dias como cliente', '2']
                                                           ], '0'), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione um tipo'}} %>
              </div>
            <div class="row">
              <div class="col-sm-6">
                <%= label_tag 'Empresa', nil, class: 'col-sm-2 control-label padding' %>
                <%= select_tag  'empresa_id', options_for_select([
                                                                     ['GERMAN TECH (MATRIZ)', 17],
                                                                     ['GERMAN TECH (FILIAL)', 3253],
                                                                     ['GERMAN SERVIÇOS', 3422],
                                                                 ], ([17,3253, 3422])), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione uma empresa'}, :include_blank => true, :multiple => true} %>
              </div>
              <div class="col-lg-2">
                <br>
                <%= submit_tag 'Gerar', :id => 'btnGerarRelatorio', :class => 'btn btn-primary', :formtarget => "_blank" %>
              </div>
            </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag("relatorios_analise_desistencia") %>