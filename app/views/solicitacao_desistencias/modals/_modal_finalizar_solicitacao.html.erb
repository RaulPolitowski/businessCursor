<div id="modal_finalizar_solicitacao" class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="title_finalizar"></h4>
      </div>
      <form class="form-horizontal" id="form_comentario">
        <div class="modal-body">
          <div class="form-group" id="group_desistente" style="display: none">
            <div class="col-sm-12 no-padding">
              <div class="field">
                <div class="col-sm-12">
                  <label id="motivo_principais">Motivo principais</label>
                  <div class="input-group clockpicker" data-autoclose="true">
                    <%= select_tag 'tags', options_for_select(TagsSolicitacaoDesistencia.all.collect {|p| [p.descricao, p.id]}), {:class => "form-control input-sm chosen-select", :data => {:placeholder => 'Selecione motivos principais'}, :include_blank => true} %>                    
                    <span class="input-group-addon padding-0">
                      <button type="button" class="btn btn-sm btn-info" onclick="btnNewTagDesistencia()" title="Nova tag" data-toggle="tooltip" data-placement="right">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                      </button>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <div class="col-sm-12">
                <label id="error_comentario" style="color: red; display: none;">Informe o coment√°rio!</label>
                <textarea autocomplete="off" class="form-control" name="comentario" id="text_comentario"></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
          <%= submit_tag 'Salvar', :id => 'btnFinalizarDesistencia', :class => 'btn btn-info' %>
        </div>
      </form>
    </div>
  </div>
</div>


