<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>PERMISSÕES</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Cadastros</h5>
          <div class="ibox-tools">
            <%= button_to new_permissao_path, { method: 'get', class: 'btn btn-sm btn-primary' } do %>
              <i class="fa fa-file" aria-hidden="true"> Nova Permissão</i>
            <% end %>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover table-permissoes">
            <thead>
            <tr>
              <th>Código</th>
              <th>Descrição</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @permissoes.each do |permissao| %>
              <tr>
                <td><%= permissao.id.to_s %></td>
                <td><%= permissao.descricao %></td>
                <td><%= link_to edit_permissao_path(permissao), { class: 'btn btn-sm btn-default btn-table', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' } do %>
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  <% end %></td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
      $(function() {
          $('.table-permissoes').DataTable({
              pageLength: 10,
              rowReorder: {
                  selector: 'td:nth-child(2)'
              },
              responsive: true,
              dom: '<"html5buttons"B>lTfgitp',
              "ordering": true,
              buttons: [
                  {extend: 'excel', title: 'Permissões'},
                  {extend: 'pdf', title: 'Permissões'}
              ],
              "language": {
                  "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
              },
              "columnDefs": [
                  { "width": "10%", "targets": 0 },
                  { "width": "85%", "targets": 1 },
                  { "width": "5%", "targets": 2 }
              ],

          });
      });
  </script>
<% end %>
