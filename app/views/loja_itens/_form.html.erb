<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Dados</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <fieldset class="form-horizontal">
                <%= form_for(@loja_item) do |f| %>
                  <% if @loja_item.status%>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :status, class: 'col-sm-2 control-label padding' %>
                        <div class="col-sm-10 padding">
                          <%= f.text_field :status, disabled: @loja_item.status.present?, class: 'form-control input-sm' %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :numero, class: 'col-sm-2 control-label padding'  %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :numero, disabled: @loja_item.numero.present?, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :apelido, class: 'col-sm-2 control-label padding' %>
                      <div class="col-sm-10 padding">
                        <%= f.text_field :apelido, class: 'form-control input-sm' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :vendedor, class: 'col-sm-2 control-label padding'  %><br>
                      <div class="col-sm-10 padding">
                        <%= f.select(:user_id, options_for_select(@users.collect {|p| [p.name, p.id]}, @loja_item.user_id ? @loja_item.user_id : nil),
                          { :include_blank => false }, {class: 'form-control input-sm chosen-select', :data => {:placeholder => 'Selecione um usuÃ¡rio' }})
                        %>
                      </div>
                    </div>
                  </div>
                  <div class="actions aligncenter">
                    <%= f.submit 'Salvar', :class => 'btn btn-lg btn-success aligncenter' %>
                  </div>
                <% end %>
              </fieldset>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

